<% var js_include = ['update_employee.js']%>
<% include header %>
<h2>Edit an Employee</h2>

<form id="update_employee_form" action="<%=action%>">
    <table id="employee_form" align="center">
        <tr>
            <th>First Name</th>
            <td><input type="text" id="First_Name" name="First_Name" value="<%=rs[0].First_Name%>"> </td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td><input type="text" id="Last_Name" name="Last_Name" value="<%=rs[0].Last_Name%>"></td>
        </tr>
        <tr>
            <th>Employee Number</th>
            <td><input type="int" id="Employee_Num" name="Employee_Num" value="<%=rs[0].Employee_Num%>"></td>
        </tr>
    </table>
    <input type="hidden" id="EmployeeID" name="EmployeeID" value="<%=rs[0].EmployeeID%>">
    <input type="button" id="updateEmployeeBtn" value="Update">
</form>
<br />
<br />
<nr />

<div id="output" style="align-content: center; text-align: center; horiz-align: center; margin:0px; display: none;"></div>

<% include footer %>